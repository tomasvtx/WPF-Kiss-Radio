<Application x:Class="KissRadio.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:KissRadio">
    <Application.Resources>
        
        <!-- Společné styly -->
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CommonImageStyle" TargetType="Image">
            <Setter Property="Source" Value="https://www.kiss.cz/assets/images/kiss/background.jpg"/>
            <Setter Property="Grid.RowSpan" Value="5"/>
            <Setter Property="Stretch" Value="UniformToFill"/>
        </Style>
    </Application.Resources>
</Application>
